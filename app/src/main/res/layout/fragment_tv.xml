<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvshow_swipetorefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.farazahmed.practicemovieapp.Fragments.TVFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_show_empty"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:src="@drawable/noconnection"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_show_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_show_empty"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tvshows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>
